doctype html
html 
  head 
    title URL shortner 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi", crossorigin="anonymous")
  body 
    h1(class="h-100 d-flex align-items-center justify-content-center m-3 display-3") URL Shortener
    form(action="/", method="POST", class="h-100 d-flex align-items-center justify-content-center p-3 m-3")
      div(class="form-group")
        form(action="/", method="POST")
      div(class="form-group")
        input(id="urlid", class="mb-1", type="url", name="originalURL", placeholder="Enter url")
      div(class="form-group")
        input(class="btn btn-outline-success mt-4", type="submit", value="Generate short url")

    div(class="col")
      a(class="btn btn-outline-success mt-3", href="/random") Random url